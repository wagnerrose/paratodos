<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="login-panel panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title centro">Autenticação</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, url: admin_session_path) do |f| %>
                        <fieldset>
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", type: "email" %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha", type: "password" %>
                            </div>
                            <div class="checkbox">
                                <label>
                                <%= f.check_box :remember_me %> Lembre-me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <%= f.submit "Log in", class:"btn btn-lg btn-success btn-block" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
