<% if ! notice.blank? %>
  <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
      <strong id="notice"><%= notice %></strong>
  </div>
<% end %>
<% if ! localidades.nil? %>

    <h1 class="text-center"><%= municipio.name %></h1>
    <h5 class="text-center">Latitude:<%= municipio.latitude %> - Longitude: <%= municipio.longitude %></h5>

  <table class="table table-hover ">
    <thead>
        <th>Distância da sede</th>
        <th>Localidade</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Operadora</th>
        <th>Menor Distância</th>
    </thead>

    <tbody>
      <% localidades.each do |local| %>
        <% operadora = dist_operadora(local, estacoes)%>
        <tr>
          <td><%= distancia(municipio.latitude, municipio.longitude, local.latitude, local.longitude) %> Km</td>
          <td><%= local.neighborhood %></td>
          <td><%= local.latitude %></td>
          <td><%= local.longitude %></td>
          <td><%= operadora[0] %></td>
          <td><%= '%.2f' % operadora[1] %> Km</td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
