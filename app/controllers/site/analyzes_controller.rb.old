module Site
  class AnalyzesController < ApplicationController

    layout "site"

    def index
      @states = State.all
      @counties = County.where("state_id = ?", State.first.id)
    end
    def show
      @county = County.find_by("id = ?"), params[:localidade][:county_id]
    end

    def update_counties
      @counties = County.where("state_id = ?"), params[:state_id]
      respond_to do |format|
        format.js
      end
    end
  end
end
